                                <Image x:Name="IMG_Home_GraphAPPID" HorizontalAlignment="Center" VerticalAlignment="Center" Source="C:\Dev\M365 Inventory Automation (Metro)\M365 Inventory Automation (Metro)\Resources\Icons\appbar.cogs.png" Grid.Row="0" Grid.Column="0"/>
