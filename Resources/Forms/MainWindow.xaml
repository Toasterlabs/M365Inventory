                        <Image Grid.Column="9" Grid.Row="21" x:Name="IMG_Report_PowerBIReports"  HorizontalAlignment="Center" VerticalAlignment="Center" Source="C:\Dev\M365 Inventory Automation (Metro)\M365 Inventory Automation (Metro)\Resources\Icons\Light.Orange.ico"/>
                        <Label Grid.Column="10" Grid.Row="21" Content="PowerBI reports" />
